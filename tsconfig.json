{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/features/*": [
        "./features/*"
      ],
      "@/shared/*": [
        "./shared/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/packages/*": [
        "./packages/*"
      ],
      "@/tooling/*": [
        "./tooling/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}